{
  "name": "template",
  "private": "true",
  "description": "a monorepo template",
  "author": "season <997432833lixuan@gmail.com> (https://github.com/muziyan)",
  "license": "MIT",
  "scripts": {
    "build": "node -r esbuild-register ./scripts/build.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@jiqi/eslint-config-prettier": "^0.0.1",
    "@jiqi/eslint-config-ts": "^0.0.1",
    "@types/node": "^18.11.8",
    "@vitest/ui": "^0.24.4",
    "bumpp": "^8.2.1",
    "dts-bundle-generator": "^7.0.0",
    "esbuild": "^0.15.12",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vitest": "^0.24.4"
  }
}
